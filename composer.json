{
  "name": "milenmk/simple-password-manager",
  "type": "project",
  "description": "Simple password manager written on PHP with Bootstrap and PDO database connection",
  "homepage": "https://blacktiehost.com",
  "license": "GPL-3.0-or-later",
  "autoload": {
    "psr-4": {
      "PasswordManager\\": "class"
    }
  },
  "require": {
    "php": ">=7.3.0",
    "ext-curl": "*",
    "ext-mbstring": "*",
    "twig/twig": "^3.5",
    "ext-pdo": "*",
    "ext-openssl": "*",
    "paragonie/sodium_compat": "^1.19"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.7",
    "phpunit/phpunit": "^9.5",
    "phpmd/phpmd": "^2.13",
    "friendsofphp/php-cs-fixer": "^3.13",
    "vimeo/psalm": "^5.4",
    "phpstan/phpstan": "^1.9"
  },
  "scripts": {
    "phpcs": "phpcs --standard=PSR12",
    "php-cs-fixer": "php-cs-fixer --rules=@PSR12",
    "phpmd": "phpmd codesize,controversial"
  }
}
